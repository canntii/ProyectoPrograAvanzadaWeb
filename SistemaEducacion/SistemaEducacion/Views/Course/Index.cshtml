@using SistemaEducacion.WebEntities
@model IEnumerable<Course>

@{
    ViewData["Title"] = "Cursos";
}

<main id="main" data-aos="fade-in">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
        <div class="container">
            <h2>Cursos Disponibles</h2>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Courses Section ======= -->
    <section id="courses" class="courses">
        <div class="container" data-aos="fade-up">
            <div class="row" data-aos="zoom-in" data-aos-delay="100">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-md-0 mb-3" >
                        <div class="course-item" style="width:100%">
                            <img src="@item.PictureUrl" class="img-fluid" alt="..."  style="width:100%; max-height:60%; min-height:60%">
                            <div class="course-content">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h4>Curso #@item.CourseID</h4>
                                </div>
                                <h3><a href="course-details.html">@item.CourseTitle</a></h3>
                                <p>@item.CourseDescription</p>
                            </div>
                        </div>
                    </div> <!-- End Course Item-->
                }
    </section><!-- End Courses Section -->
</main><!-- End #main -->