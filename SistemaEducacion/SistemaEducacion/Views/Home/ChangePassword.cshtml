@model SistemaEducacion.WebEntities.User
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs mt-0" data-aos="fade-in">
        <div class="container">
            <h2>Recuperar Acceso</h2>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact pt-0">
        <div data-aos="fade-up" style="position: relative; z-index: -2;">
            <img style="border:0; width: 100%; height: 350px;" src="https://cantiedu.blob.core.windows.net/videos-container/olvide.jpg?sp=r&st=2024-04-27T09:11:39Z&se=2024-05-15T17:11:39Z&spr=https&sv=2022-11-02&sr=b&sig=LgFRlA5NQxLcvjTbXHhG46DQ%2BJcDMyOTGaZ%2Fnxs%2F9Ks%3D" frameborder="0" allowfullscreen></img>
        </div>

        <div class="container shadow" data-aos="fade-up mt-4" style="
        position: relative;
        z-index: 2;
        background: white;
        padding: 20px;
        border-radius: 10px;
        margin-top: -150px;
    ">
            <div class="col-lg-12 mt-5 mt-lg-0 p-4">
                <h2 class="pt-4 text-center">Cambiar Contraseña</h2>
                <!--cLASS php-email-form-->
                @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @class = "php-email-form" }))
                {
                    <div class="row">
                        <div class="form-group mt-3">
                            @Html.TextBoxFor(m => m.EmailUser, new
                                {
                                    @class = "form-control",
                                    placeholder = "Correo Electrónico",
                                    @type = "Email",
                                    @required = "true",
                                    @style = "height: 76px; font-size: 16px"
                                })
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        @Html.TextBoxFor(m => m.PasswordUser, new
                            {
                                @class = "form-control",
                                placeholder = "Clave Temporal",
                                @type = "Password",
                                @required = "true",
                                @style = "height: 76px; font-size: 16px"
                            })
                    </div>
                    <div class="form-group mt-3">
                        @Html.TextBoxFor(m => m.PasswordUser, new
                            {
                                @class = "form-control",
                                placeholder = "Clave",
                                @type = "Password",
                                @required = "true",
                                @style = "height: 76px; font-size: 16px"
                            })
                    </div>

                    <div class="my-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Your message has been sent. Thank you!</div>
                    </div>
                    <div class="text-center"><button type="submit">Validar</button></div>



                    @if (ViewBag.MsjPantalla != null)
                    {
                        <div class="alert alert-warning" role="alert" style="text-align:center">
                            @ViewBag.MsjScreen
                        </div>
                    }
                }

                </>

            </div>

        </div>
    </section><!-- End Contact Section -->

</div><!-- End #main -->


