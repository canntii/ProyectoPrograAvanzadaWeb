@model SistemaEducacion.WebEntities.User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs mt-0" data-aos="fade-in">
        <div class="container">
            <h2>Regístrate</h2>
            <p>La mejor educación, nunca ha sido tan accesible </p>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact pt-0">
        <div data-aos="fade-up" style="position: relative; z-index: -2;">
            <img style="border:0; width: 100%; height: 350px;" src="https://cantiedu.blob.core.windows.net/videos-container/Untitled%20design.png?sp=r&st=2024-04-26T03:14:53Z&se=2024-09-03T11:14:53Z&spr=https&sv=2022-11-02&sr=b&sig=MrSyu%2BRsZfSCMu1U7lRdOJiFeLSe9apymnsuWO3RdvI%3D" frameborder="0" allowfullscreen></img>
        </div>

        <div class="container shadow" data-aos="fade-up mt-4" style="
        position: relative;
        z-index: 2;
        background: white;
        padding: 20px;
        border-radius: 10px;
        margin-top: -150px;
    ">
            <div class="col-lg-12 mt-5 mt-lg-0 p-4" >
                <h2 class="pt-4 text-center">Crea tu cuenta</h2>
                <!--cLASS php-email-form-->
                @using (Html.BeginForm("RegisterUser", "Home", FormMethod.Post, new { @class = "php-email-form" }))
                {
                    <div class="row">
                        <div class="col-md-6 form-group">
                            @Html.TextBoxFor(m => m.FirstNameUser, new
                                {
                                    @class = "form-control",
                                    placeholder = "Ingrese su primer nombre",
                                    @type = "Text",
                                    @required = "true",
                                    @style = "height: 76px; font-size: 16px"
                                })
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            @Html.TextBoxFor(m => m.LastNameUser, new
                                {
                                    @class = "form-control",
                                    placeholder = "Ingrese su Apellido",
                                    @type = "Text",
                                    @required = "true",
                                    @style = "height: 76px; font-size: 16px"
                                })
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        @Html.TextBoxFor(m => m.EmailUser, new
                            {
                                @class = "form-control",
                                placeholder = "Ingrese su Correo Electrónico",
                                @type = "Text",
                                @required = "true",
                                @style = "height: 76px; font-size: 16px"
                            })
                    </div>
                    <div class="form-group mt-3">
                        @Html.TextBoxFor(m => m.PasswordUser, new
                            {
                                @class = "form-control",
                                placeholder = "Ingrese su Clave",
                                @type = "Password",
                                @required = "true",
                                @style = "height: 76px; font-size: 16px;"
                            })
                    </div>
                    <div class="my-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Your message has been sent. Thank you!</div>
                    </div>
                    <div class="text-center"><button type="submit">Crear Cuenta</button></div>
                    @if (ViewBag.MsjPantalla != null)
                    {
                        <div class="alert alert-warning" role="alert" style="text-align:center">
                            @ViewBag.MsjScreen
                        </div>
                    }


                    <div style="text-align:center; margin-top:2%">
                        <a href="@Url.Action("Login","Home")" class="text-center">¿Ya tienes una cuenta?</a>
                    </div>
                }

            </div>

        </div>

        </div>
    </section><!-- End Contact Section -->

</div><!-- End #main -->
